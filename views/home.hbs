{{#section 'js'}}
{{/section}}
<!-- News Ticker Start -->
<div class="news--ticker">
  <div class="container">
    <div class="title">
      <h2>Tin mới</h2>
      <span>(Cập nhật 10 phút trước)</span>
    </div>

    <div class="news-updates--list" data-marquee="true">
      <ul class="nav">
        {{#each this.Top10MoiNhat}}
          <li>
            <h3 class="h3"><a
                href="/news/newscontent/{{idBaiBao}}"
              >{{TieuDe}}</a></h3>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<!-- News Ticker End -->

<!-- Đường dẫn trang hiện tại -->
<div class="main--breadcrumb pbottom--30">
  <div class="container">
    <ul class="breadcrumb">
      <li><a href="" class="btn-link"><i class="fa fm fa-home"></i>Trang chủ</a></li>
    </ul>
  </div>
</div>
<!-- Kết thúc đường dẫn trang hiện tại -->

<!-- Main Content Section Start -->
<div class="main-content--section pbottom--30">
  <div class="container">
    <!-- Bài viêt nổi bật trong tuần -->
    <div id="hotnews" class="main--content">
      <!-- Post Items Title Start -->
      <div class="post--items-title" data-ajax="tab">
        <h2 class="h4">Tin nổi bật</h2>
      </div>
      <!-- Post Items Title End -->
      {{#if this.empty}}
        <h1>Không có dữ liệu!</h1>
      {{else}}
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators" style="color: blueviolet;">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
            <li data-target="#myCarousel" data-slide-to="4"></li>
          </ol>
          <!-- Wrapper for slides -->
          <div class="carousel-inner">
            <div class="item active">
              <a href="#"><img
                  style="height: 400px; width:auto; display: block; margin-left: auto; margin-right: auto;"
                  src="img/home-img/tinnoibat.jpeg"
                  alt=""
                /></a>
            </div>
            {{#each this.BaiVietNoiBat}}
              <div class="item">
                <div class="post--img">
                  <a href="/news/newscontent/{{idBaiBao}}"><img
                      style="height: 400px; width:auto; display: block; margin-left: auto; margin-right: auto;"
                      src="img/BaiBao/{{AnhDaiDien}}"
                      alt=""
                    /></a>
                  <a
                    href="/news/newslist/idChuyenMucPhu/{{idChuyenMucPhu}}"
                    class="cat"
                    style="margin-left: 150px;"
                  >{{TenChuyenMucPhu}}</a>
                  <div class="carousel-caption">
                    <div class="post--info">
                      <ul class="nav">
                        <li><a href="#">{{ButDanh}}</a></li>
                        <li><a href="#">{{LuotXem}}</a></li>
                        <li><a href="#">{{dateFormat
                              NgayDang
                              "DD/MM/YYYY"
                            }}</a></li>
                      </ul>
                      <div class="title">
                        <h3><a
                            href="/news/newscontent/{{idBaiBao}}"
                            class="btn-link"
                          >{{TieuDe}}</a></h3>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a
            class="right carousel-control"
            href="#myCarousel"
            data-slide="next"
          >
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <!-- Post Items End -->
      {{/if}}

    </div>
    <!-- Bài viết nổi bật trong tuần End -->

    <div class="row">
      <!-- Main Content Start -->
      <div class="main--content col-md-8 col-sm-7" data-sticky-content="true">
        <div class="sticky-content-inner">
          <div class="row">
            <!-- Bài Viết theo Chuyên Mục Start -->
            {{#each this.Top10ChuyenMuc}}

              <div class="col-md-6 ptop--30 pbottom--30">
                <!-- Post Items Title Start -->
                <div class="post--items-title" data-ajax="tab">
                  <h2
                    href="/news/newslist/idChuyenMucPhu/{{idChuyenMucPhu}}"
                    class="h4"
                  >{{TenChuyenMucPhu}}</h2>
                </div>
                <!-- Post Items Title End -->

                <!-- Post Items Start -->
                <div
                  class="post--items post--items-2"
                  data-ajax-content="outer"
                >
                  <ul class="nav row gutter--15" data-ajax-content="inner">
                    <li class="col-xs-12">
                      <!-- Post Item Start -->
                      <div class="post--item post--layout-1">
                        <div class="post--img">
                          <a
                            href="/news/newscontent/{{idBaiBao}}"
                            class="thumb"
                          ><img
                              style="height: 250px; width: auto; object-fit: cover;"
                              src="img/BaiBao/{{AnhDaiDien}}"
                              alt="Cover"
                            /></a>
                          <a
                            href="/news/newslist/idChuyenMucPhu/{{idChuyenMucPhu}}"
                            class="cat"
                          >{{TenChuyenMucPhu}}</a>
                          <a href="#" class="icon"><i
                              class="fa fa-flash"
                            ></i></a>

                          <div class="post--info">
                            <ul class="nav meta">
                              <li><a href="#">{{ButDanh}}</a></li>
                              <li class="pull-right"><a href="#"><span
                                  >{{LuotXem}}</span><i
                                    class="fa fa-eye"
                                  ></i></a></li>
                              <li><a href="#">{{dateFormat
                                    NgayDang
                                    "DD/MM/YYYY"
                                  }}</a></li>
                            </ul>

                            <div class="title">
                              <h3 class="h4"><a
                                  href="/news/newscontent/{{idBaiBao}}"
                                  class="btn-link"
                                >{{TieuDe}}</a></h3>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Post Item End -->
                    </li>
                    <li class="col-xs-12">
                      <!-- Divider Start -->
                      <hr class="divider" />
                      <!-- Divider End -->
                    </li>
                  </ul>
                  <!-- Preloader Start -->
                  <div class="preloader bg--color-0--b" data-preloader="1">
                    <div class="preloader--inner"></div>
                  </div>
                  <!-- Preloader End -->
                </div>
                <!-- Post Items End -->
              </div>
            {{/each}}

            <!-- Bài Viết theo Chuyên Mục End -->
          </div>
        </div>
      </div>

      <!-- Main Content End -->

      <!-- Main Sidebar Start -->
      <div
        class="main--sidebar col-md-4 col-sm-5 ptop--30 pbottom--30"
        data-sticky-content="true"
      >
        <div class="sticky-content-inner">
          <!-- Top 10 Xem Nhiều Start -->
          <div id="mostwatched" class="widget">
            <div class="widget--title">
              <h2 class="h4">Top 10 Tin Tức Xem Nhiều Nhất</h2>
              <i class="icon fa fa-newspaper-o"></i>
            </div>
            <!-- Content Start -->
            <div class="list--widget list--widget-1">
              <!-- Post Items Start -->
              <div class="post--items post--items-3" data-ajax-content="outer">
                <ul class="nav" data-ajax-content="inner">
                  {{#each this.Top10XemNhieuNhat}}
                    <li>
                      <!-- Post Item Start -->
                      <div class="post--item post--layout-3">
                        <div class="post--img">
                          <a
                            href="/news/newscontent/{{idBaiBao}}"
                            class="thumb"
                          ><img
                              src="img/BaiBao/{{AnhDaiDien}}"
                              alt="cover"
                            /></a>
                          <div class="post--info">
                            <ul class="nav meta">
                              <li><a href="#">{{ButDanh}}</a></li>
                              <li class="pull-right"><a href="#"><span
                                  >{{LuotXem}}</span><i
                                    class="fa fa-eye"
                                  ></i></a></li>
                            </ul>

                            <div class="title">
                              <h3 class="h4"><a
                                  href="/news/newscontent/{{idBaiBao}}"
                                  class="btn-link"
                                >{{TieuDe}}</a></h3>
                              <p>{{dateFormat NgayDang "DD/MM/YYYY"}}</p>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Post Item End -->
                    </li>
                  {{/each}}
                </ul>

                <!-- Preloader Start -->
                <div class="preloader bg--color-0--b" data-preloader="1">
                  <div class="preloader--inner"></div>
                </div>
                <!-- Preloader End -->
              </div>
              <!-- Post Items End -->
            </div>
            <!-- Content End -->
          </div>
          <!-- Top 10 Xem Nhiều End -->

          <!-- Top 10 Mới Nhất Start -->
          <div id="trendingnews" class="widget">
            <div class="widget--title">
              <h2 class="h4">Top 10 Tin Tức Mới Nhất</h2>
              <i class="icon fa fa-newspaper-o"></i>
            </div>
            <!-- Content Start -->
            <div class="list--widget list--widget-1">
              <!-- Post Items Start -->
              <div class="post--items post--items-3" data-ajax-content="outer">
                <ul class="nav" data-ajax-content="inner">
                  {{#each this.Top10MoiNhat}}
                    <li>
                      <!-- Post Item Start -->
                      <div class="post--item post--layout-3">
                        <div class="post--img">
                          <a
                            href="/news/newscontent/{{idBaiBao}}"
                            class="thumb"
                          ><img
                              src="img/BaiBao/{{AnhDaiDien}}"
                              alt=""
                            /></a>

                          <div class="post--info">
                            <ul class="nav meta">
                              <li><a href="#">{{ButDanh}}</a></li>
                              <li class="pull-right"><a href="#"><span
                                  >{{LuotXem}}</span><i
                                    class="fa fa-eye"
                                  ></i></a></li>
                            </ul>

                            <div class="title">
                              <h3 class="h4"><a
                                  href="/news/newscontent/{{idBaiBao}}"
                                  class="btn-link"
                                >{{TieuDe}}</a></h3>
                              <p>{{dateFormat NgayDang "DD/MM/YYYY"}}</p>
                            </div>
                          </div>
                        </div>
                      </div>
                      <!-- Post Item End -->
                    </li>
                  {{/each}}
                </ul>

                <!-- Preloader Start -->
                <div class="preloader bg--color-0--b" data-preloader="1">
                  <div class="preloader--inner"></div>
                </div>
                <!-- Preloader End -->
              </div>
              <!-- Post Items End -->
            </div>
            <!-- Content End -->
          </div>
          <!-- Top 10 Mới Nhất End -->

        </div>
      </div>
      <!-- Main Sidebar End -->
    </div>

   
  </div>
</div>
<!-- Main Content Section End -->

